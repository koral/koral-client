{
  "env": {
    "node": true
  },

  "parser": "babel-eslint",

  "rules": {
    "strict": 0,
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-new-func": 0,
    "key-spacing": 0,
    "consistent-return": 0,
    "no-proto": 0,
    "no-eval": 0,
    "no-multi-spaces": 0,
    "no-constant-condition": 0,
    "new-cap": 0,

    "semi": 1,
    "comma-dangle": [1, "always-multiline"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "max-len": [1, 80, 2],
    "eol-last": 1,
    "camelcase": 1,
    "no-unused-vars": 1,
    "no-empty": 1,
    "no-irregular-whitespace": 1,
    "max-params": [1, 4],
    "curly": [1, "multi-line"],
    "semi-spacing": [1, { "before": false, "after": true }],

    "no-extend-native": 2,
    "eqeqeq": [2, "allow-null"],
    "max-depth": [2, 5],
    "guard-for-in": 2,
    "wrap-iife": [2, "inside"],
    "no-use-before-define": [2, "nofunc"],
    "no-caller": 2,
    "no-new": 2,
    "quotes": [2, "double"],
    "no-undef": 2,
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "always"]
  },

  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "regexUFlag": true,
    "regexYFlag": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": true
  },
}
